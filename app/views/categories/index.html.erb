<h1>Listing Categories</h1>

<table>
    <tr>
        <th>Title</th>
        <th>Text</th>
        <th colspan="3"></th>
    </tr>

    <% @categorie.each do |categorie| %>
        <tr>
            <td><%= categorie.title %></td>
            <td><%= categorie.description %></td>
            <td><%= link_to 'Show', category_path(categorie) %></td>
            <td><%= link_to 'Edit', edit_category_path(categorie) %></td>
            <td><%= link_to 'Destroy', category_path(categorie), method: :delete, data: { confirm: 'Are you sure ?' } %></td>
        </tr>
    <% end %>
</table>

<%= link_to 'New categorie', new_category_path %>
            